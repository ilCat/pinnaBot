<?xml version='1.0'?>
<robot name="Pinna_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">  

    <!--incluyo el archivo de los plugins de Gazebo-->
    <xacro:include filename="$(find pinnaBot_description)/urdf/Pinna_bot.gazebo" />
    <xacro:include filename="$(find pinnaBot_description)/urdf/materials.xacro" />
    <xacro:include filename="$(find pinnaBot_description)/urdf/macros.xacro" />
    <!--Links o partes-->
    <link name="link_chassis">

        <!-- pose and inertial -->
        <pose>0 0 0.1 0 0 0</pose>
        <inertial>
            <mass value="3.0"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.0655" ixy="0" ixz="0" iyy="0.0517" iyz="0" izz="0.14"/>
        </inertial>

        <!--Chasis -->
        <collision name="collision_chassis">
            <origin rpy="0 0 0" xyz="0 0 0.085"/>
            <geometry>
                <box size="0.22 0.320 0.173"/>
            </geometry>
        </collision>

        <visual>
            <origin rpy="0 0 0" xyz="0 0.160 0"/>
            <geometry>
                <mesh filename="package://pinnaBot_description/meshes/Chasis_pinna_botV1.dae"/><!--<box size="0.5 0.3 0.07"/>-->
            </geometry>
        </visual>

        <!--pivot wheel-->
        <collision name="caster_back_collision">
            <origin rpy="0 0 0" xyz="0 -0.11 0"/>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
            <surface>
              <friction>
                <ode>
                  <mu>0</mu>
                  <mu2>0</mu2>
                  <slip1>1.0</slip1>
                  <slip2>1.0</slip2>
                </ode>
              </friction>
            </surface>
        </collision>

        <visual name="caster_back_visual">
            <origin rpy="0 0 0" xyz="0 -0.11 0"/>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
            <material name="white"/>
        </visual>

    </link>
  
    <link name="link_right_wheel">

        <inertial>
            <mass value="1.0"/>
            <origin rpy="0 1.5707 0" xyz="0 0 0"/>            
            <inertia ixx="0.01107" ixy="0" ixz="0" iyy="0.01107" iyz="0" izz="0.02152"/>
        </inertial>

        <collision name="link_right_wheel_collision">
            <origin rpy="0 1.5707 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.022" radius="0.055"/>
            </geometry>
        </collision>

        <visual name="link_right_wheel_visual">
            <origin rpy="0 1.5707 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://pinnaBot_description/meshes/Wheel_pinna_bot.dae"/><!--<cylinder length="0.04" radius="0.1"/>-->
            </geometry>
        </visual>

    </link>
  
    <link name="link_left_wheel">

        <inertial>
            <mass value="1.0"/>
            <origin rpy="0 -1.5707 0" xyz="0 0 0"/>
            <inertia ixx="0.01107" ixy="0" ixz="0" iyy="0.01107" iyz="0" izz="0.02152"/>
        </inertial>

        <collision name="link_left_wheel_collision">
            <origin rpy="0 -1.5707 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.022" radius="0.055"/>
            </geometry>
        </collision>

        <visual name="link_left_wheel_visual">
            <origin rpy="0 -1.5707 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://pinnaBot_description/meshes/Wheel_pinna_bot.dae"/><!--<cylinder length="0.04" radius="0.1"/>-->
            </geometry>
        </visual>

    </link>

    <!-- Camera -->
    <link name="camera_link">

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.030 0.030  0.045"/>
        </geometry>
      </collision>

      <inertial>
        <mass value="0.160" />
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
      </inertial>

    </link>

    <!-- Lidar -->
    <link name="lidar_link">

        <collision>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
            <cylinder length="0.07" radius="0.05"/>
          </geometry>
        </collision>

        <visual>
          <origin xyz="0 0 0" rpy="0 0 -3.14"/>
          <geometry>
            <mesh filename="package://pinnaBot_description/meshes/RPLidar.dae"/>
          </geometry>
        </visual>

        <inertial>
          <mass value="0.170" />
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
        </inertial>

    </link>

    <!-- Ultrasonidos -->
    <link name="ultrasonido_link_front">

      <inertial>
        <mass value="0.001" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia ixx="0.000000017" ixy="0" ixz="0" iyy="0.000000017" iyz="0" izz="0.000000017" />
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 -1.5707" />
        <geometry>
          <mesh filename="package://pinnaBot_description/meshes/Ultrasonido.dae"/>
        </geometry>
      </visual>
      
    </link>

    <link name="ultrasonido_link_left">

      <inertial>
        <mass value="0.001" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia ixx="0.000000017" ixy="0" ixz="0" iyy="0.000000017" iyz="0" izz="0.000000017" />
      </inertial>
      
      <visual>
        <origin xyz="0 0 0" rpy="0 0 -1.5707" />
        <geometry>
          <mesh filename="package://pinnaBot_description/meshes/Ultrasonido.dae"/>
        </geometry>
      </visual>
      
    </link>
    
    <link name="ultrasonido_link_right">

      <inertial>
        <mass value="0.001" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia ixx="0.000000017" ixy="0" ixz="0" iyy="0.000000017" iyz="0" izz="0.000000017" />
      </inertial>
      
      <visual>
        <origin xyz="0 0 0" rpy="0 0 -1.5707" />
        <geometry>
          <mesh filename="package://pinnaBot_description/meshes/Ultrasonido.dae"/>
        </geometry>
      </visual>
      
    </link>
    


    <!--Joints o uniones-->
    <joint name="joint_right_wheel" type="continuous">
          <origin rpy="0 0 0" xyz="0.122 0.085 0.026"/>
          <child link="link_right_wheel"/>
          <parent link="link_chassis"/>
          <axis rpy="0 0 0" xyz="-1 0 0"/>
          <limit effort="10000" velocity="1000"/>
          <joint_properties damping="0.80" friction="1.0"/>
    </joint>
    
    <joint name="joint_left_wheel" type="continuous">
          <origin rpy="0 0 0" xyz="-0.122 0.085 0.026"/>
          <child link="link_left_wheel"/>
          <parent link="link_chassis"/>
          <axis rpy="0 0 0" xyz="-1 0 0"/>
          <limit effort="10000" velocity="1000"/>
          <joint_properties damping="0.80" friction="1.0"/>
    </joint>

    <joint name="camera_joint" type="fixed">
          <origin rpy="0 0 1.5707" xyz="0 0.155 0.128"/>
          <parent link="link_chassis"/>
          <child link="camera_link"/>
    </joint>

    <joint name="lidar_joint" type="fixed">
          <origin rpy="0 0 1.5707" xyz="0 0.075 0.190"/>
          <parent link="link_chassis"/>
          <child link="lidar_link"/>
    </joint>

    <joint name="ultrasonido_front_joint" type="fixed">
      <origin xyz="0 0.158 0.051" rpy="0 0 1.5707"/>
      <parent link="link_chassis"/>
      <child link="ultrasonido_link_front"/>
    </joint>

    <joint name="ultrasonido_left_joint" type="fixed">
      <origin xyz="-0.08 0.1405 0.051" rpy="0 0 2.1"/>
      <parent link="link_chassis"/>
      <child link="ultrasonido_link_left"/>
    </joint>

    <joint name="ultrasonido_right_joint" type="fixed">
      <origin xyz="0.08 0.1405 0.051" rpy="0 0 1.04"/>
      <parent link="link_chassis"/>
      <child link="ultrasonido_link_right"/>
    </joint>

    
</robot>